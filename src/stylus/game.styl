html, body, div, table, p
  margin 0
  padding 0

body
  background-image url(unquote('data:image/png;base64,'))

#scoreboard
  margin 10px
  font-family sans-serif
  font-size 24px

#board
  margin 0px
  padding 0px 10px
  border-spacing 0
  td
    width 58px
    height 58px
    border 1px outset #EEEEEE
    background-color #CCCCCC
    
@keyframes circle-fade-in-keyframes
  from
    opacity 0
  to
    opacity 1

.circle-fade-in
  -webkit-animation circle-fade-in-keyframes 1s ease-out
  -moz-animation circle-fade-in-keyframes 1s ease-out
    
@keyframes circle-fade-out-keyframes
  from
    opacity 1
  to
    opacity 0

.circle-fade-out
  -webkit-animation circle-fade-out-keyframes 0.5s ease-out
  -moz-animation circle-fade-out-keyframes 0.5s ease-out

circle-color(color)
  width 42px
  height 42px
  border-radius 50%
  margin 5px
  background-image -webkit-radial-gradient(35% 35%, circle cover, white 5%, color 50%)
  background-image -moz-radial-gradient(35% 35%, circle cover, white 5%, color 50%)

.circle-red
  circle-color red
  
.circle-green
  circle-color green
  
.circle-blue
  circle-color blue
  
.circle-yellow
  circle-color yellow

@keyframes circle-jump-keyframes
  from
    margin-top 5px
  to
    margin-top -5px
    
.circle-jump
  -webkit-animation circle-jump-keyframes .2s alternate ease-out infinite
  -moz-animation circle-jump-keyframes .2s alternate ease-out infinite